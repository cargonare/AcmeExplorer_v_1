<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/MiColor"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/trip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/trip_image"
                android:layout_width="238dp"
                android:layout_height="223dp"
                android:layout_margin="15dp"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/trip_cities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/trip_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/trip_dates_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/selectedIcon"
                android:layout_width="28sp"
                android:clickable="true"
                android:layout_height="35sp"
                app:srcCompat="@drawable/red_cross" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
